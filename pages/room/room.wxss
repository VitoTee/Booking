/* pages/room/room.wxss */
.container > view:nth-child(2){
  padding:20rpx;
  font-size:16px;
  display: flex;
  flex-direction:column;
  
}
.container > view:nth-child(2) > view:last-child{
  font-size:12px;
  color:#ED6D15;
}
.container > view:nth-child(2) > view > .price{
  font-size:20px;
  margin-right:5rpx;
}
.container > view:nth-child(2) > view > .oldPrice{
  color:#ccc;
  text-decoration:line-through;
  margin-left:10rpx;
  font-size:13px;
}
.container .infoList{
  display: flex;
  flex-direction:column;
}
.container .infoList .infoItem{
  padding:20rpx;
  font-size:13px;
  border-bottom:1px solid #ccc;
}
.container .infoList .infoItem > view:first-child{
  font-size:16px;
  margin-bottom:20rpx;
}
.container .infoList .infoItem > view:nth-child(2){
  display:flex;
  flex-direction:column;
}
.container .infoList .infoItem:nth-last-child(2) > view{
  flex-flow:row wrap;
}
.container .infoList .infoItem:nth-last-child(2) > view > text{
  width:50%;
}
