/**app.wxss**/

@import '/assets/css/icons.wxss';

.container {
  width:750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow:hidden;
} 

view{
  width:100%;
  box-sizing: border-box;
}

/* 分割线 */
.separation{
  width:100%;
  height:20rpx;
  background-color:#F2F4F6;
}

/* 清浮动 */
.clearfix:after{
  content:'';
  display:block;
  clear:both;
}
